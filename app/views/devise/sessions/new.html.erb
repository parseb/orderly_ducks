<div class="row" style="margin-top:10%; padding: 1%;">
  <h2 style="color:dodgerblue; font-weight: bold; margin-bottom: 3%;margin-left: 1%;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="margin: 1%;">
    <%= f.label :email, class:"form-label", style:"color:dodgerblue;font-weight:bold"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
  </div>

  <div class="field" style="margin: 1%;">
    <%= f.label :password, class:"form-label", style:"color:dodgerblue;font-weight:bold"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control"%>
  </div>


  <div class="actions" style="margin: 1%;">
    <%= f.submit "Log in",class:"btn btn-primary", style:"background-color:dodgerblue;color:white;font-weight:bold;margin-top:10px;margin-bottom:8px; width:100%" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>